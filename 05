class Cbox{
	int length;
	int width;
	int height;
	int valume() {	
		return (length * width * height);
	}
	int surfaceArua() {
		return (length * width * 4 + width * height * 2);
	}
	void showData() {	
		System.out.println("length = " + length + "，width = " + width + "，height = " + height);	
	}
	void showALL() {	
		System.out.println("length = " + length + "，width = " + width + "，height = " + height);	
		System.out.println("valume = " + length * width * height);	
		System.out.println("surfaceArua = " + (length * width * 4 + width * height * 2));	
	}
}
public class main {
	public static void main(String args[]) {
		Cbox box;
		box = new Cbox();
		box.length = 1;
		box.width = 1;
		box.height = 1;
		box.valume();
		box.surfaceArua();
		box.showData();
		box.showALL();
		
	}
}
